# Application Settings - Optimized for 3000+ Concurrent Users
PORT=8080
APP_ENV=production

# Database Settings - Supabase (PostgreSQL) - REQUIRED
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here
# Database password from: https://app.supabase.com/project/_/settings/database (Database password field)
SUPABASE_DB_PASSWORD=your-database-password-here

# Vite Environment Variables for Frontend (Supabase)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Redis Settings - Clustering Support for High Availability
REDIS_URL=redis://localhost:6379
# For Redis Cluster (comma-separated addresses)
REDIS_CLUSTER_ADDRS=redis-node1:6379,redis-node2:6379,redis-node3:6379

# WhatsApp Settings - Multi-Device Support
WHATSAPP_STORAGE_PATH=./whatsapp_sessions
WHATSAPP_SESSION_DIR=./whatsapp_sessions
WHATSAPP_MAX_DEVICES=10

# OpenRouter AI Settings - Performance Optimized
OPENROUTER_DEFAULT_KEY=""
OPENROUTER_TIMEOUT=15
OPENROUTER_MAX_RETRIES=2

# Security Settings
JWT_SECRET=""
SESSION_SECRET=""

# Performance Settings - High Concurrency Support
MAX_CONCURRENT_USERS=5000
WEBSOCKET_ENABLED=true

# CDN Settings - Media File Optimization
CDN_ENABLED=false
CDN_BASE_URL=https://your-cdn-domain.com

# Legacy Settings (for backward compatibility)
APP_PORT=8080
APP_DEBUG=false
APP_OS=Chrome
APP_BASIC_AUTH=user:password
APP_CHAT_FLUSH_INTERVAL=7
WHATSAPP_AUTO_REPLY=""
WHATSAPP_WEBHOOK=""
WHATSAPP_WEBHOOK_SECRET=""
WHATSAPP_ACCOUNT_VALIDATION=true
WHATSAPP_CHAT_STORAGE=true
